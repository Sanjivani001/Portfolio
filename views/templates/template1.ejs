<!DOCTYPE html>
<html>
<head>
  <title><%= portfolio.name %>'s Portfolio</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f2f2f2;
      color: #333;
      margin: 0;
      padding: 20px;
    }
    .container {
      background: #fff;
      padding: 30px;
      max-width: 900px;
      margin: auto;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1, h2 {
      color: #1a73e8;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    .projects {
      margin-top: 30px;
    }
    .project {
      margin-bottom: 20px;
      border-bottom: 1px solid #ccc;
      padding-bottom: 15px;
    }
    .project img {
      max-width: 200px;
      display: block;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1><%= portfolio.name %></h1>
    <h2><%= portfolio.title %></h2>
    <p><strong>About:</strong> <%= portfolio.about %></p>

    <p><strong>Skills:</strong> <%= portfolio.skills %></p>
    <p><strong>Email:</strong> <%= portfolio.email %></p>
    <p><strong>Phone:</strong> <%= portfolio.phone %></p>
    <p><strong>GitHub:</strong> <a href="<%= portfolio.github %>" target="_blank"><%= portfolio.github %></a></p>
    <p><strong>LinkedIn:</strong> <a href="<%= portfolio.linkedin %>" target="_blank"><%= portfolio.linkedin %></a></p>

    <div class="projects">
      <h2>Projects</h2>
      <% portfolio.projects.forEach(project => { %>
        <div class="project">
          <h3><%= project.title %></h3>
          <p><%= project.description %></p>
          <p><a href="<%= project.link %>" target="_blank">View Project</a></p>
          <% if (project.image) { %>
            <img src="<%= project.image %>" alt="Project Image">
          <% } %>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
